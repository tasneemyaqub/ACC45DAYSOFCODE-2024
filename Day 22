#include <bits/stdc++.h>
using namespace std;

int main() {
	int T;
	cin >> T;
	while(T--)
	{
	    int N;
	    cin >> N;
	    int arr[N];
	    for(int i=0; i<N; i++)
	    {
	        cin >> arr[i];
	    }
	    long sum=0;
	    for(int i=0; i<N-1; i++)
	    {
	       sum += (abs(arr[i]-arr[i+1]))-1;
	    }
	    cout << sum << endl;
	}
}
